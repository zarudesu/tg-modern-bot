# =============================================================================
# HHIVP IT Assistant Bot - Конфигурация
# =============================================================================

# ОБЯЗАТЕЛЬНЫЕ НАСТРОЙКИ
# -----------------------

# Telegram Bot Token (получить у @BotFather)
TELEGRAM_TOKEN=123456789:AAAA-BBBB-CCCC

# Admin Telegram User ID (ваш ID, получить у @userinfobot)
ADMIN_USER_ID=123456789

# Дополнительные админы (через запятую)
ADDITIONAL_ADMIN_IDS=111111111,222222222

# БАЗА ДАННЫХ
# ------------

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/telegram_bot

# Redis (для кеширования)
REDIS_URL=redis://localhost:6379

# ИНТЕГРАЦИИ (ОПЦИОНАЛЬНО)
# -------------------------

# Plane.so API
PLANE_API_URL=https://your-plane-instance.com
PLANE_API_TOKEN=your_plane_api_token
PLANE_WORKSPACE_SLUG=your-workspace

# n8n Integration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/work-journal
N8N_API_KEY=your_n8n_api_key_here

# Work Journal Group Chat ID (для уведомлений)
WORK_JOURNAL_GROUP_CHAT_ID=-1001234567890

# НАСТРОЙКИ DAILY TASKS
# ----------------------

# Включить ежедневные задачи
DAILY_TASKS_ENABLED=false

# Время отправки (формат HH:MM)
DAILY_TASKS_TIME=09:00

# Часовой пояс
DAILY_TASKS_TIMEZONE=Europe/Moscow

# AI CONFIGURATION (ENTERPRISE FEATURES)
# ---------------------------------------

# OpenAI API Key (для GPT-4, GPT-3.5)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic API Key (для Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# AI Model по умолчанию (gpt-4-turbo, gpt-3.5-turbo, claude-3-opus-20240229)
AI_MODEL=gpt-4-turbo

# AI Temperature (0.0 - 1.0, влияет на креативность ответов)
AI_TEMPERATURE=0.7

# AI Max Tokens (максимальная длина ответа)
AI_MAX_TOKENS=2000

# ЛОГИРОВАНИЕ
# -----------

# Уровень логов (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Формат логов (json, text)
LOG_FORMAT=json

# Максимальный размер лог файла
MAX_LOG_SIZE=100MB

# Время хранения логов
LOG_RETENTION=30d

# БЕЗОПАСНОСТЬ
# ------------

# Rate limiting
RATE_LIMIT_DEFAULT=10/minute
RATE_LIMIT_SEARCH=30/minute
RATE_LIMIT_ADMIN=100/minute

# Таймаут сессии (секунды)
SESSION_TIMEOUT=3600

# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# -------------------------

# Режим разработки
DEBUG=false

# Webhook режим (false = polling)
USE_WEBHOOK=false

# Webhook URL (если USE_WEBHOOK=true)
WEBHOOK_URL=https://your-domain.com/webhook

# Webhook Secret
WEBHOOK_SECRET=your_secret_key

# SSL сертификаты (для webhook)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# =============================================================================
# ПРИМЕЧАНИЯ:
# 
# 1. Скопируйте этот файл как .env и заполните своими значениями
# 2. Обязательно добавьте .env в .gitignore
# 3. Для production используйте отдельные значения
# 4. ADMIN_USER_ID можно получить отправив /start боту @userinfobot
# 5. TELEGRAM_TOKEN получается у @BotFather при создании бота
# =============================================================================
